URxvt.intensityStyles: false
URxvt.scrollBar: false

! Ctrl Up and Down control font size
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
! copy paste
URxvt.keysym.Shift-Control-V:   perl:clipboard:paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy

! disable ctrl-shift
URxvt.iso14755: false
URxvt.iso14755_52: false

! font
URxvt*font: xft:Fira Code:size=10:antialias=true:hinting=true,xft:Liberation Mono:size=13:antialias=true:hinting=true
!URxvt*font xft:terminus:size=25



! terminal padding
URxvt.internalBorder: 25

Xft.autohint:   0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting:    true
Xft.antialias:  true
Xft.rgba:       rgb

! clickable links, clipboard support, mouse wheel support, and on the fly font resizing
URxvt.perl-ext-common: selection-to-clipboard
URxvt.matcher.rend.0: Uline Bold fg6
URxvt.colorUL: #282828
URxvt.url-launcher:	/usr/bin/xdg-open
URxvt.matcher.button:	1
